# SYN FLOOD RULE
# CAN CUSTOMISE FOR A SPECOFOC PORT EG: PORT 80, 8080
alert tcp $EXTERNAL_NET any -> $HOME_NET any (flags:S; msg:"POSSIBLE SYN FLOOD DOS/DDOS ATTACK"; detection_filter:  track by_src, seconds 10; priority:5; sid: 20001; rev:4;)

# PORT SCAN
# SHOWING ONLY OPEN PORTS IS FINE
alert tcp $EXTERNAL_NET any -> $HOME_NET any (msg:"Port Scanning Detected"; flow:to_server,established; threshold:type limit,track by_src,count 5,seconds 10; sid:1000001;)

# PHISHING LINK
alert tcp any any -> any 25 (msg:"Suspicious Email Detected"; content:"Subject:"; content:"urgent"; nocase; content:"important"; nocase; content:"free giveaway"; nocase; sid:1000001;)

# SSH BRUTE FORCE ATTACK
# TRYING USING ESTABLISHED CONNECTION CHEKING ONLY 
alert tcp $EXTERNAL_NET any -> $HOME_NET 22 (msg: "Potential SSH Atack"; flags: S; priority:5; threshold: type threshold, track by_src, count 10, seconds 120; classtype: suspicious-login; sid: 2001219; rev:10; )